auto lo

iface lo inet loopback
iface eth0 inet static
   metric 0
   dns-nameservers 8.8.8.8 8.8.4.4
   address 192.168.0.221
   netmask 255.255.255.0
   network 192.168.0.1
   broadcast 192.168.0.255
   gateway 192.168.0.1

allow-hotplug wlan0
